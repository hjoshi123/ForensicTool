<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/back_grey"
    android:orientation="vertical"
    tools:context="com.koondan.forensictool.Activity.FirstActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/search_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/back_grey"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:backgroundTint="@color/back_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/sms_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-10sp"
                android:layout_marginLeft="-5sp"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@mipmap/ic_message_white_48dp"
                android:backgroundTint="@android:color/holo_red_light" />

            <ImageButton
                android:id="@+id/call_logs_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-10sp"
                android:layout_marginLeft="-5sp"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@mipmap/ic_phone_white_48dp"
                android:backgroundTint="@color/fav_green" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:backgroundTint="@color/back_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/contacts_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-10sp"
                android:layout_marginLeft="-5sp"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/ic_person_white_48dp"
                app:backgroundTint="@color/fav_blue" />

            <ImageButton
                android:id="@+id/device_info_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-10sp"
                android:layout_marginLeft="-5sp"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/ic_perm_device_information_white_48dp"
                app:backgroundTint="@android:color/holo_orange_light" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="@color/back_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-10sp"
                android:layout_marginLeft="-5sp"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:layout_weight="1"
                android:clickable="true"

                android:src="@android:drawable/ic_dialog_info"
                app:backgroundTint="@color/colorAccent" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>